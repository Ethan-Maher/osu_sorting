generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    String   @id @default(uuid())
  name  String   @unique
  items ClothingItem[]
}

model ClothingItem {
  id         String   @id @default(uuid())
  order      Int
  brand      String
  size       String
  price      Float
  color      String
  sku        String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
}
